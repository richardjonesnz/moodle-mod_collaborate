{{!
    @template mod_collaborate/reports

    Moodle renders a simple view page

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * heading String a page heading.
    * headers String array the table headers
    * submissions array of student submission records

    Example context (json):
        {
         "heading": "My heading",
         "headers": "[heading1, heading2, ...]",
         "submissions": "[record1], [record2], ..."
        }
}}
<div class = "container">
  <ul class="nav nav-tabs">
    <li class="nav-item"><a class="nav-link" href="{{url_view}}">
          {{# str }} viewtab, mod_collaborate
    {{/ str }}</a></li>
    <li class="nav-item"><a class="nav-link active" href="{{url_reports}}">
          {{# str }} reportstab, mod_collaborate {{/ str }}</a></li></a></li>

    </ul>
</div>

<div class="card">
  <div class="card-body">
    <h2 class="card-title">{{heading}}</h2>
      <div class="table-responsive">
       <table class="table table-striped">
          <thead>
            {{#headers}}
               <th>{{.}}</th>
            {{/headers}}
          </thead>
          <tbody>
            {{#submissions}}
              {{> mod_collaborate/pagerow}}
            {{/submissions}}
         </tbody>
       </table>
     </div>
  </div>
</div>